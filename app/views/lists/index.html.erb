<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1?q=80&w=3125&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Sentouss brings <strong>THE WATCHLIST</strong> to <strong>YOU</strong>!</h1>
    <p>Change your life and save any kind of movies.</p>
  </div>
</div>

<div class="container my-4">
  <h2 class="mb-4">My Lists</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-3">
        <%= link_to list_path(list), class: "card-link text-decoration-none" do %>
          <div class="card bg-dark text-white text-center">
            <div class="card-img-top" style="background-image: url('<%= list.image_url %>'); height: 200px; background-size: cover; position: relative;">
              <div class="card-img-overlay d-flex align-items-center justify-content-center" style="background: rgba(0, 0, 0, 0.4);">
                <h5 class="card-title text-center"><%= list.name %></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
